<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="mobile_company" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.tsystems.mobile_company.entity.ContractEntity</class>
        <class>org.tsystems.mobile_company.entity.LockTypeEntity</class>
        <class>org.tsystems.mobile_company.entity.OptionEntity</class>
        <class>org.tsystems.mobile_company.entity.OptionsConstraintEntity</class>
        <class>org.tsystems.mobile_company.entity.PlanEntity</class>
        <class>org.tsystems.mobile_company.entity.PlanOptionsEntity</class>
        <class>org.tsystems.mobile_company.entity.SelectedOptionsEntity</class>
        <class>org.tsystems.mobile_company.entity.UserEntity</class>
        <class>org.tsystems.mobile_company.entity.UserTypeEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/mobile_company"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
