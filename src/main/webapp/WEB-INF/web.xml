<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.tsystems.mobile_company.servlets.ServletMain</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.tsystems.mobile_company.servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginValidationFilter</filter-name>
        <filter-class>org.tsystems.mobile_company.filters.FilterLoginValidation</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginValidationFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
    </filter-mapping>


</web-app>